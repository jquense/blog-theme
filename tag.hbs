{{!< default}}

<header id="main-header">
	<nav id="main-nav">
		<span id="home-link"><a class="js-ajax-link js-show-index" href="{{@blog.url}}"><i class="fa fa-angle-left"></i> Home</a></span>
		<span id="rss-link"><a class="subscribe" href="{{@blog.url}}/tag/{{tag.slug}}/rss/"><i class="fa fa-rss"></i> {{tag.name}}</a></span>
	</nav>
	<div class="inner">
		<h1 class="page-title">{{tag.name}}</h1>
	</div>
	{{#if @blog.cover}}
		<div class="site-cover" style="background-image: url({{@blog.cover}})"></div>
	{{/if}}
</header>

<div id="post-index" class="container">
	<main class="content" role="main">
		{{> "loop"}}
	</main>
</div>